{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_OPTIONS": "--no-deprecation"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--no-deprecation --max-old-space-size=8000"
    }
  }
}
